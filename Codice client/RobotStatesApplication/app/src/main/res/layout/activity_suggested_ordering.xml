<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_drinks"
    tools:context=".Views.SuggestedOrderingActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneConfermaDrinkSuggerito"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/mainbutton_bg"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/varela"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottoneAnnullaDrinkSuggerito"
        app:layout_constraintTop_toBottomOf="@+id/nomeDrinkSuggerito" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneOutOfSightOrderingSuggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/bluette"
        android:drawableStart="@drawable/icona_uscita"
        android:text="Allontanati"
        android:fontFamily="@font/varela"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/promptOrderingSuggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cosa ti va di bere?"
        android:fontFamily="@font/varela"
        android:textColor="@color/blu_scuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottoneOutOfSightOrderingSuggested"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/promptOrderingSuggested2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela"
        android:text="Che ne diresti di un..."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promptOrderingSuggested"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageView
        android:id="@+id/iconaDrinkPreferito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/nomeDrinkSuggerito"
        app:layout_constraintEnd_toEndOf="@+id/promptOrderingSuggested2"
        app:layout_constraintStart_toStartOf="@+id/promptOrderingSuggested2"
        app:layout_constraintTop_toBottomOf="@+id/promptOrderingSuggested2"
        app:srcCompat="@drawable/drink_icon" />

    <TextView
        android:id="@+id/nomeDrinkSuggerito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/varela"
        android:text="NOME DRINK"
        android:textColor="@color/blu_scuro"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneAnnullaDrinkSuggerito"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/secondarybutton_bg"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="Non mi va"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/varela"
        android:textAllCaps="true"
        android:textColor="@color/blu_scuro"
        app:layout_constraintBottom_toBottomOf="@+id/bottoneConfermaDrinkSuggerito"
        app:layout_constraintEnd_toStartOf="@+id/bottoneConfermaDrinkSuggerito"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottoneConfermaDrinkSuggerito" />
</androidx.constraintlayout.widget.ConstraintLayout>