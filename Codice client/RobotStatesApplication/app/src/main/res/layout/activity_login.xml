<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_drinks"
    tools:context=".Views.LoginActivity">

    <TextView
        android:id="@+id/labelPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/varela"
        android:text="Password"
        android:textColor="#0E0D57"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/labelUsernameLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelUsernameLogin"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameLogin"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iconaLogin"
        android:layout_width="188dp"
        android:layout_height="173dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/roboticon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPromptLogin1"
        android:layout_width="283dp"
        android:layout_height="57dp"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:text="Benvenuto!"
        android:textColor="#0E0D57"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iconaLogin"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/iconaLogin"
        app:layout_constraintTop_toBottomOf="@+id/iconaLogin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPromptLogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela"
        android:text="Effettua il login"
        android:textColor="#0E0D57"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPromptLogin1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/textViewPromptLogin1"
        app:layout_constraintTop_toBottomOf="@+id/textViewPromptLogin1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelUsernameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/varela"
        android:text="Username"
        android:textColor="#0E0D57"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPromptLogin2"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/editTextUsernameLogin"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:fontFamily="@font/varela"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/labelUsernameLogin"
        app:layout_constraintTop_toBottomOf="@+id/labelUsernameLogin"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneLogin"
        android:layout_width="168dp"
        android:layout_height="64dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/mainbutton_bg"
        android:fontFamily="@font/varela"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsernameLogin"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editTextUsernameLogin"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/textViewInizioRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:fontFamily="@font/varela"
        android:text="Non hai un account? Registrati qui"
        android:paddingHorizontal="5dp"
        android:textColor="@color/blu_scuro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottoneLogin"
        app:layout_constraintStart_toStartOf="@+id/bottoneLogin"
        app:layout_constraintTop_toBottomOf="@+id/bottoneLogin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:background="@color/opaco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsernameLogin"
        app:layout_constraintStart_toStartOf="@+id/editTextUsernameLogin"
        app:layout_constraintTop_toBottomOf="@+id/labelPasswordLogin"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/occhioPasswordLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextPasswordLogin"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icona_occhio" />

        <EditText
            android:id="@+id/editTextPasswordLogin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/varela"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/occhioPasswordLogin"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>