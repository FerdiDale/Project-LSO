<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_drinks"
    tools:context=".Views.RegistrazioneActivity">

    <TextView
        android:id="@+id/labelSessoRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Sesso"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/labelDataNascitaRegistrazione"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSessoRegistrazione"
        app:layout_constraintStart_toEndOf="@+id/iconaCalendarioRegistrazione"
        app:layout_constraintTop_toTopOf="@+id/labelDataNascitaRegistrazione"
        app:layout_constraintVertical_bias="0.264" />

    <TextView
        android:id="@+id/labelDataNascitaRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Data di nascita"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCognomeRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNomeRegistrazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/cursor_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelUsernameRegistrazione"
        app:layout_constraintTop_toBottomOf="@+id/labelNomeRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelNomeRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Nome"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promptRegistrazione"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/labelCognomeRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Cognome"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextUsernameRegistrazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelUsernameRegistrazione"
        app:layout_constraintTop_toBottomOf="@+id/labelUsernameRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelPasswordRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelUsernameRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDataNascita"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextCognomeRegistrazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/cursor_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelUsernameRegistrazione"
        app:layout_constraintTop_toBottomOf="@+id/labelCognomeRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/promptRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Crea un nuovo account"
        android:textColor="@color/blu_scuro"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labelConfermaPasswordRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Conferma password"
        android:textColor="@color/blu_scuro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneAnnullaRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/secondarybutton_bg"
        android:paddingHorizontal="10dp"
        android:text="Torna indietro"
        android:textAllCaps="false"
        android:textColor="@color/blu_scuro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottoneInizioQuestionario"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/bottoneInizioQuestionario"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottoneInizioQuestionario"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/mainbutton_bg"
        android:paddingHorizontal="10dp"
        android:text="Procedi al questionario"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintVertical_bias="0.507" />

    <EditText
        android:id="@+id/editTextDataNascita"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:enabled="false"
        android:inputType="date"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/cursor_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labelDataNascitaRegistrazione"
        app:layout_constraintTop_toBottomOf="@+id/labelDataNascitaRegistrazione"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iconaCalendarioRegistrazione"
        android:layout_width="37dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDataNascita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextDataNascita"
        app:layout_constraintTop_toTopOf="@+id/editTextDataNascita"
        app:srcCompat="@drawable/icona_calendario" />

    <Spinner
        android:id="@+id/spinnerSessoRegistrazione"
        android:layout_width="103dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/editTextDataNascita"
        app:layout_constraintEnd_toEndOf="@+id/editTextCognomeRegistrazione"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iconaCalendarioRegistrazione"
        app:layout_constraintTop_toTopOf="@+id/editTextDataNascita"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:background="@color/opaco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextUsernameRegistrazione"
        app:layout_constraintStart_toStartOf="@+id/editTextUsernameRegistrazione"
        app:layout_constraintTop_toBottomOf="@+id/labelPasswordRegistrazione"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editTextPasswordRegistrazione"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:ems="10"
            android:inputType="text|textPassword|textCapSentences"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textCursorDrawable="@drawable/cursor_edittext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/occhioPasswordRegistrazione"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/occhioPasswordRegistrazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextPasswordRegistrazione"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icona_occhio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:background="@color/opaco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/labelConfermaPasswordRegistrazione"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editTextConfermaPasswordRegistrazione"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="text|textPassword|textCapSentences"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_edittext"
            app:layout_constraintEnd_toStartOf="@+id/occhioConfermaPasswordRegistrazione"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp" />

        <ImageView
            android:id="@+id/occhioConfermaPasswordRegistrazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextConfermaPasswordRegistrazione"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icona_occhio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>